<div class="mt-4 mb-2">
  <h2 class="mb-5">Novo Lista de Receita</h2>
  <div class="card border-0 shadow-lg">
    <div class="card-body">
      <%= form_with model: @recipe_list do |f| %>
        <%= f.label :name, "Nome", class: 'form-label' %>
        <%= f.text_field :name, class: "form-control" %>
        <%= f.submit "Salvar", class:'btn btn-primary my-3' %>
      <% end %>
    </div>
  </div>
</div>
